{
  "title": "SBA Certifications Search",
  "type": "object",
  "description": "Minimal configuration for querying https://search.certifications.sba.gov/_api/v2/search.",
  "schemaVersion": 1,
  "properties": {
    "searchTerm": {
      "title": "Search term",
      "type": "string",
      "description": "Full text query used by the Search SBA website (business name, UEI, CAGE code, keywords, etc.).",
      "editor": "textfield"
    },
    "states": {
      "title": "States or territories",
      "type": "array",
      "description": "Select one or more two-letter state / territory codes.",
      "editor": "select",
      "items": {
        "type": "string",
        "enum": [
          "AL",
          "AK",
          "AS",
          "AZ",
          "AR",
          "CA",
          "CO",
          "CT",
          "DE",
          "DC",
          "FM",
          "FL",
          "GA",
          "GU",
          "HI",
          "ID",
          "IL",
          "IN",
          "IA",
          "KS",
          "KY",
          "LA",
          "ME",
          "MH",
          "MD",
          "MA",
          "MI",
          "MN",
          "MS",
          "MO",
          "MT",
          "NE",
          "NV",
          "NH",
          "NJ",
          "NM",
          "NY",
          "NC",
          "ND",
          "MP",
          "OH",
          "OK",
          "OR",
          "PW",
          "PA",
          "PR",
          "RI",
          "SC",
          "SD",
          "TN",
          "TX",
          "UT",
          "VT",
          "VA",
          "VI",
          "WA",
          "WV",
          "WI",
          "WY"
        ]
      }
    },
    "lastUpdated": {
      "title": "Profile last updated",
      "type": "string",
      "description": "Filter by when the SBA profile was last updated.",
      "editor": "select",
      "enum": [
        "anytime",
        "past-3-months",
        "past-6-months",
        "past-year",
        "custom"
      ],
      "default": "anytime"
    },
    "customDateRange": {
      "title": "Custom updated date range",
      "type": "object",
      "description": "Only used when lastUpdated = custom. Dates are interpreted as YYYY-MM-DD.",
      "editor": "schemaBased",
      "properties": {
        "from": {
          "title": "From",
          "type": "string",
          "description": "Start date (inclusive) in YYYY-MM-DD format.",
          "editor": "textfield"
        },
        "to": {
          "title": "To",
          "type": "string",
          "description": "End date (inclusive) in YYYY-MM-DD format.",
          "editor": "textfield"
        }
      }
    },
    "maxItems": {
      "title": "Maximum results to store",
      "type": "integer",
      "description": "Limit the number of businesses stored to the dataset (0 keeps everything).",
      "editor": "number",
      "minimum": 0,
      "default": 0
    }
  },
  "additionalProperties": false
}
